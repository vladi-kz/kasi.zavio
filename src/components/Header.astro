---
import HeaderLink from "./HeaderLink.astro";
import HamburgerMenu from "./HamburgerMenu.astro";
---

<header
  class="flex justify-between items-center z-10 sticky top-0 p-3 bg-slate-900"
>
  <h1 class="font-bold text-lime-200">Kasi.Zavio</h1>

  <HamburgerMenu />

  <nav>
    <div class="hidden sm:flex sm:items-center sm:justify-center gap-5">
      <HeaderLink href="/">Home</HeaderLink>
      <HeaderLink href="/blog">Blog</HeaderLink>
      <HeaderLink href="/about">About</HeaderLink>
    </div>
  </nav>
</header>
<style>
  nav a {
    font-size: 1rem;
    border-bottom: 4px solid transparent;
    text-decoration: none;
  }
  nav a.active {
    text-decoration: none;
    border-bottom-color: #64748b;
  }
</style>
